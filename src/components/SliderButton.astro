---
const { direction = "next" } = Astro.props;

const isPrev = direction === "prev";
const positionClass = isPrev ? "left-4" : "right-4";
const iconPath = isPrev ? "M15 19l-7-7 7-7" : "M9 5l7 7-7 7";
---

<button
  id={direction}
  class={`absolute top-1/2 ${positionClass} -translate-y-1/2 w-16 h-16 rounded-full bg-gradient-to-br from-sky-400 to-blue-600 text-white flex items-center justify-center shadow-[0_0_25px_rgba(56,189,248,0.6)] hover:scale-110 transition-all backdrop-blur-lg border border-white/20`}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-8 h-8"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d={iconPath}></path>
  </svg>
</button>
